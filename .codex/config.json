{
  "mcpServers": {
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git",
        "--repository",
        "${workspaceFolder}"
      ],
      "disabledTools": []
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "${workspaceFolder}"
      ],
      "disabledTools": []
    }
  },
  "pipelines": {
    "auto-dev": {
      "description": "Translator → Requirements Analyst → Detail Designer → Planner pipeline",
      "steps": [
        "translator",
        "requirements_analyst",
        "detail_designer",
        "planner"
      ]
    }
  }
}

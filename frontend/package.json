{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --browsers=ChromeHeadlessNoSandbox --watch=false --code-coverage=false",
    "test:debug": "ng test --browsers=Chrome --watch=true",
    "test:ci": "ng test --browsers=ChromeHeadlessNoSandbox --watch=false --no-progress --code-coverage",
    "test:e2e": "playwright test",
    "test:e2e:install": "playwright install chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lint": "node ./scripts/run-eslint.cjs \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "node ./scripts/run-eslint.cjs \"src/**/*.{ts,tsx}\" --max-warnings=0 --fix",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss}\"",
    "format:write": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "postinstall": "node node_modules/puppeteer/install.mjs && patch-package"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.2",
    "@angular/cdk": "^20.2.5",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/platform-browser": "^20.3.2",
    "@angular/router": "^20.3.2",
    "@js-temporal/polyfill": "^0.5.1",
    "mermaid": "^11.12.2",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.3",
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.2",
    "@angular/platform-browser-dynamic": "^20.3.2",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.57.0",
    "@types/jasmine": "~5.1.9",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^14.0.0",
    "jasmine-core": "~5.11.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "patch-package": "^8.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "puppeteer": "^24.22.3",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.9.2"
  },
  "overrides": {
    "karma": {
      "glob": "^10.4.5",
      "rimraf": "^4.4.1"
    }
  }
}
